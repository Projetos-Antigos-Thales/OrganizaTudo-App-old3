<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OrganizaTudo.CadastrarUsuario" Title="Criar Conta">
    <ContentPage.Content>
        <StackLayout>

            <Entry x:Name="txtApelido" Placeholder="Apelido" FontSize="Large" Margin="40,30,40,0" ReturnType="Next" />

            <Entry x:Name="txtEmail" Placeholder="E-mail" FontSize="Large" Margin="40,20,40,0" ReturnType="Next" />

            <Entry x:Name="txtSenha" Placeholder="Senha" FontSize="Large" Margin="40,20,40,0" IsPassword="True" Completed="btnCriarConta_Clicked" />

            <Button x:Name="btnCriarConta" Clicked="btnCriarConta_Clicked" BorderRadius="10" FontSize="Medium" Text="CRIAR CONTA" Margin="40,25,40,0" Padding="0" TextColor="#FFFFFF" BackgroundColor="#35C0ED"></Button>

            <Label x:Name="lblErro" FontAttributes="Bold" FontSize="Medium" TextColor="#AA0000" HorizontalTextAlignment="Center" Margin="0,10,0,0"></Label>
        
        </StackLayout>
    </ContentPage.Content>
</ContentPage>