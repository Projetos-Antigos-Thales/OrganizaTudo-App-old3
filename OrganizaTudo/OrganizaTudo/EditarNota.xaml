<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OrganizaTudo.EditarNota" Title="Editar Nota" >

    <ContentPage.Content>

        <StackLayout>
            <Entry x:Name="txtTitulo" Placeholder="Titulo da Nota" FontSize="Large" Margin="20,20,20,0" />
            <Editor x:Name="txtNota" Placeholder="Nota" FontSize="Medium" Margin="20,20,20,0" HeightRequest="500" />
            <Button x:Name="btnSalvar" Clicked="btnSalvar_Clicked" FontSize="Medium" Text="SALVAR" Margin="20,20,20,0" TextColor="#FFFFFF" BackgroundColor="Gray"></Button>
            <Button x:Name="btnExcluir" Clicked="btnExcluir_Clicked" FontSize="Medium" Text="EXCLUIR" Margin="20,10,20,0" TextColor="#FFFFFF" BackgroundColor="#ff0000"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>