<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OrganizaTudo.MainPage" Title="" NavigationPage.HasNavigationBar="False">

    <StackLayout>
        
        <Label FontSize="35" HorizontalTextAlignment="Center" Margin="0,30,0,0">ORGANIZA TUDO</Label>

        <Entry ClassId="txtApelido" Placeholder="Apelido" FontSize="Large" Margin="40,20,40,0" />

        <Entry ClassId="txtSenha" Placeholder="Senha" FontSize="Large" Margin="40,20,40,0" IsPassword="True" />

        <Button Clicked="btnLogin_Clicked" BorderRadius="10" FontSize="Large" Text="LOGIN" Margin="40,25,40,0" Padding="0" TextColor="#FFFFFF" BackgroundColor="#35C0ED" ClassId="btnLogin"></Button>
        
        <Button Clicked="btnCriarConta_Clicked" TextColor="#35C0ED" FontSize="15" Margin="0,5,0,0" Text="CRIAR CONTA" BackgroundColor="Transparent"></Button>
        
    </StackLayout>

</ContentPage>
